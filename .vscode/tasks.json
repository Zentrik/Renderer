{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "windows": {
                "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
                "options": {
                    "cwd": "C:\\msys64\\mingw64\\bin"
                },
                "args": [
                    "-std=c++17",
                    "-fdiagnostics-color=always",
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}\\${fileBasenameNoExtension}.exe",
                    "-static",
                    "-static-libstdc++",
                    "-Wall",
                    "-Wextra",
                    "-O3",
                    "-ffast-math",
                    "-march=native",
                    "-flto",
                    "-fopenmp",
                ]
            },
            "linux": {
                "command": "g++",
                "options": {
                    "cwd": "${fileDirname}"
                },
                "args": [
                    "-std=c++17",
                    "-fdiagnostics-color=always",
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}",
                    "-Wall",
                    "-Wextra",
                    "-O3",
                    "-ffast-math",
                    "-march=native",
                    "-flto",
                    "-fopenmp",
                    "-ltbb" // for for_each std::execution::par, https://stackoverflow.com/questions/65866491/why-is-my-parallel-stdfor-each-only-using-1-thread
                ]
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "g++ build release."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++- debug active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-march=native",
                "-fopenmp",
                "-ltbb",
                "-Wall",
                "-Wextra"
                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debug"
        }
    ],
    "version": "2.0.0"
}